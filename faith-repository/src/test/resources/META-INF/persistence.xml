<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="faith-test-db"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>ch.hsr.faith.domain.Furniture</class>
		<class>ch.hsr.faith.domain.Organization</class>
		<class>ch.hsr.faith.domain.FurnitureCategory</class>
		<class>ch.hsr.faith.domain.Contact</class>
		<class>ch.hsr.faith.domain.Address</class>
		<class>ch.hsr.faith.domain.UserAccount</class>
		<class>ch.hsr.faith.domain.OrganizationGroup</class>
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy" />
		</properties>
	</persistence-unit>
</persistence>