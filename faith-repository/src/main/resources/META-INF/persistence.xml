<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="faith-database"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>ch.hsr.faith.domain.PieceOfFurniture</class>
		<class>ch.hsr.faith.domain.ItemNeeded</class>
		<class>ch.hsr.faith.domain.Facility</class>
		<class>ch.hsr.faith.domain.FurnitureCategory</class>
		<class>ch.hsr.faith.domain.UserAccount</class>
		<class>ch.hsr.faith.domain.FacilityCategory</class>
		<properties>
			<property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy" />
		</properties>
	</persistence-unit>
</persistence>